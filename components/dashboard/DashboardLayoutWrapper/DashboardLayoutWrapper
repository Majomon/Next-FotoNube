"use client";

import { useRouter } from "next/navigation";
import { useEffect } from "react";
import PhotographerLayout from "../../../app/dashboard/photographer/layout";
import { useAuthStore } from "../../../store/useAuthStore";

export default function DashboardLayoutWrapper({
  children,
}: {
  children: React.ReactNode;
}) {
  const { user } = useAuthStore();
  const router = useRouter();

  useEffect(() => {
    if (!user) {
      router.push("/login");
    }
  }, [user, router]);

  if (!user) return null; // mientras carga el usuario

  if (user.role === "photographer") {
    return <PhotographerLayout>{children}</PhotographerLayout>;
  }

  if (user.role === "buyer") {
    return <BuyerLayout>{children}</BuyerLayout>;
  }

  return <div>Rol no reconocido</div>;
}
